{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://plugins.dprint.dev/g-plane/markup_fmt/v0.9.0/schema.json",
  "title": "Config",
  "description": "Configuration for dprint-plugin-markup.",
  "type": "object",
  "properties": {
    "printWidth": {
      "type": "integer",
      "default": 80,
      "minimum": 0
    },
    "useTabs": {
      "type": "boolean",
      "default": false
    },
    "indentWidth": {
      "type": "integer",
      "default": 2,
      "minimum": 0
    },
    "lineBreak": {
      "type": "string",
      "enum": ["lf", "crlf"],
      "default": "lf"
    },
    "quotes": {
      "type": "string",
      "enum": ["double", "single"],
      "default": "double"
    },
    "formatComments": {
      "type": "boolean",
      "default": false
    },
    "scriptIndent": {
      "type": "boolean",
      "default": false
    },
    "html.scriptIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "vue.scriptIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "svelte.scriptIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "astro.scriptIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "styleIndent": {
      "type": "boolean",
      "default": false
    },
    "html.styleIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "vue.styleIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "svelte.styleIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "astro.styleIndent": {
      "type": ["boolean", "null"],
      "default": null
    },
    "closingBracketSameLine": {
      "type": "boolean",
      "default": false
    },
    "closingTagLineBreakForEmpty": {
      "type": "string",
      "enum": ["always", "fit", "never"],
      "default": "fit"
    },
    "maxAttrsPerLine": {
      "type": ["integer", "null"],
      "default": null,
      "minimum": 1
    },
    "preferAttrsSingleLine": {
      "type": "boolean",
      "default": false
    },
    "html.normal.selfClosing": {
      "type": ["boolean", "null"],
      "default": null
    },
    "html.void.selfClosing": {
      "type": ["boolean", "null"],
      "default": null
    },
    "component.selfClosing": {
      "type": ["boolean", "null"],
      "default": null
    },
    "svg.selfClosing": {
      "type": ["boolean", "null"],
      "default": null
    },
    "mathml.selfClosing": {
      "type": ["boolean", "null"],
      "default": null
    },
    "whitespaceSensitivity": {
      "type": "string",
      "enum": ["css", "strict", "ignore"],
      "default": "css"
    },
    "component.whitespaceSensitivity": {
      "type": ["string", "null"],
      "enum": ["css", "strict", "ignore", null],
      "default": null
    },
    "doctypeKeywordCase": {
      "type": "string",
      "enum": ["ignore", "upper", "lower"],
      "default": "upper"
    },
    "vBindStyle": {
      "type": ["string", "null"],
      "enum": ["short", "long", null],
      "default": null
    },
    "vOnStyle": {
      "type": ["string", "null"],
      "enum": ["short", "long", null],
      "default": null
    },
    "vForDelimiterStyle": {
      "type": ["string", "null"],
      "enum": ["in", "of", null],
      "default": null
    },
    "vSlotStyle": {
      "type": ["string", "null"],
      "enum": ["short", "long", "vSlot", null],
      "default": null
    },
    "component.vSlotStyle": {
      "type": ["string", "null"],
      "enum": ["short", "long", "vSlot", null],
      "default": null
    },
    "default.vSlotStyle": {
      "type": ["string", "null"],
      "enum": ["short", "long", "vSlot", null],
      "default": null
    },
    "named.vSlotStyle": {
      "type": ["string", "null"],
      "enum": ["short", "long", "vSlot", null],
      "default": null
    },
    "vBindSameNameShortHand": {
      "type": ["boolean", "null"],
      "default": null
    },
    "strictSvelteAttr": {
      "type": "boolean",
      "default": false
    },
    "svelteAttrShorthand": {
      "type": ["boolean", "null"],
      "default": null
    },
    "svelteDirectiveShorthand": {
      "type": ["boolean", "null"],
      "default": null
    },
    "astroAttrShorthand": {
      "type": ["boolean", "null"],
      "default": null
    }
  }
}
